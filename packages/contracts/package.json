{
  "name": "@uniforum/contracts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "deploy:offchain-resolver": "bun run scripts/deploy-offchain-resolver.ts",
    "deploy:offchain-resolver:publish": "hardhat run scripts/deploy-offchain-resolver-hardhat.cjs --network sepolia",
    "build:calldata": "bun run scripts/build-execution-calldata.ts",
    "test:execution-tx": "bun run scripts/test-execution-tx.ts",
    "test:execution-all-actions": "bun run scripts/test-all-actions-simulate.ts",
    "test:e2e": "bun run scripts/test-e2e-api-simulate.ts",
    "test:deliberation": "bun run scripts/test-deliberation-simulate.ts"
  },
  "dependencies": {
    "@uniforum/shared": "workspace:*",
    "@uniswap/sdk-core": "^5.0.0",
    "@uniswap/universal-router-sdk": "^4.29.0",
    "@uniswap/v4-sdk": "^1.25.0",
    "viem": "^2.7.0"
  },
  "devDependencies": {
    "@ensdomains/ens-contracts": "^0.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.10",
    "@openzeppelin/contracts": "^4.9.6",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.14",
    "solc": "^0.8.30",
    "dotenv": "^16.4.5",
    "typescript": "^5.3.0"
  }
}
