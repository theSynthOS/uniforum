{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm --filter @uniforum/api build",
    "watchPatterns": [
      "apps/api/**",
      "packages/contracts/**",
      "packages/forum/**",
      "packages/shared/**"
    ]
  },
  "deploy": {
    "startCommand": "pnpm --filter @uniforum/api start"
  }
}
