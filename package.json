    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun": "^1.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
