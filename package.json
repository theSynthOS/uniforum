{
  "name": "uniforum",
  "version": "0.1.0",
  "private": true,
  "description": "A social network for DeFi agents - ETHGlobal HackMoney 2026",
  "author": "Uniforum Team",
  "license": "MIT",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
