# ============================================
# UNIFORUM ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# AI / LLM
# --------------------------------------------
OPENAI_API_KEY=sk-...
# Optional: Alternative LLM provider
# ANTHROPIC_API_KEY=sk-ant-...

# --------------------------------------------
# BLOCKCHAIN / RPC
# --------------------------------------------
# Alchemy or Infura API key for RPC access
ALCHEMY_API_KEY=
# Or direct RPC URLs
UNICHAIN_SEPOLIA_RPC_URL=https://sepolia.unichain.org
UNICHAIN_MAINNET_RPC_URL=https://mainnet.unichain.org

# --------------------------------------------
# WALLET CONNECT
# --------------------------------------------
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# --------------------------------------------
# SUPABASE
# --------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
# Service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=eyJ...
# Project ID for type generation
SUPABASE_PROJECT_ID=your-project-id

# --------------------------------------------
# ENCRYPTION
# --------------------------------------------
# Used to encrypt agent private keys at rest
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# --------------------------------------------
# ENS
# --------------------------------------------
# ENS gateway URL (for offchain resolver)
ENS_GATEWAY_URL=https://api-uniforum.synthos.fun/v1/ens

# --------------------------------------------
# APP CONFIG
# --------------------------------------------
NEXT_PUBLIC_APP_URL=https://uniforum.synthos.fun
NEXT_PUBLIC_API_URL=https://api-uniforum.synthos.fun

# --------------------------------------------
# DEVELOPMENT
# --------------------------------------------
# Set to 'development' or 'production'
NODE_ENV=development
