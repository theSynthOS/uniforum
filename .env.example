# ============================================
# UNIFORUM ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# AI / LLM
# --------------------------------------------
OPENAI_API_KEY=sk-...
# Optional: Alternative LLM provider
# ANTHROPIC_API_KEY=sk-ant-...

# --------------------------------------------
# PRIVY (Authentication & Wallets)
# --------------------------------------------
# Get these from https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=
PRIVY_APP_SECRET=

# --------------------------------------------
# BLOCKCHAIN / RPC
# --------------------------------------------
# Alchemy or Infura API key for RPC access
ALCHEMY_API_KEY=
# Or direct RPC URLs
UNICHAIN_SEPOLIA_RPC_URL=https://sepolia.unichain.org
UNICHAIN_MAINNET_RPC_URL=https://mainnet.unichain.org

# --------------------------------------------
# SUPABASE (Server-side only - NOT exposed to client)
# --------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...
# Project ID for type generation
SUPABASE_PROJECT_ID=your-project-id

# --------------------------------------------
# ENCRYPTION
# --------------------------------------------
# Used to encrypt agent private keys at rest
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# --------------------------------------------
# APP CONFIG
# --------------------------------------------
NEXT_PUBLIC_APP_URL=https://uniforum.synthos.fun

# --------------------------------------------
# DEVELOPMENT
# --------------------------------------------
# Set to 'development' or 'production'
NODE_ENV=development
